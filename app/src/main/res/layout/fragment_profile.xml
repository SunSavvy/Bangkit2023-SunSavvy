<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/space_lg"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_picture"
        style="@style/Card.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_3xl"
        android:outlineSpotShadowColor="?attr/colorOnSecondary"
        app:cardCornerRadius="@dimen/radius_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/size_xl"
            android:layout_height="@dimen/size_xl"
            android:contentDescription="@string/content_picture"
            android:src="@drawable/img_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_lg"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/placeholder_username"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_lg"
        app:layout_constraintEnd_toEndOf="@+id/card_picture"
        app:layout_constraintStart_toStartOf="@+id/card_picture"
        app:layout_constraintTop_toBottomOf="@+id/card_picture" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xs"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/placeholder_email"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorSecondary"
        android:textSize="@dimen/text_md"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_lg"
        android:background="@drawable/shape_circle_accent"
        android:elevation="@dimen/elevation_lg"
        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing="0"
        android:outlineSpotShadowColor="?attr/colorOnSecondary"
        android:text="@string/button_edit_profile"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_md"
        app:layout_constraintBottom_toTopOf="@+id/log_out"
        app:layout_constraintEnd_toEndOf="@+id/log_out"
        app:layout_constraintStart_toStartOf="@+id/log_out"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/log_out"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_danger"
        android:elevation="@dimen/elevation_lg"
        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing="0"
        android:outlineSpotShadowColor="?attr/colorOnSecondary"
        android:text="@string/button_log_out"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>