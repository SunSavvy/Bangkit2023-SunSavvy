<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunSavvy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/zinc_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zinc_500</item>
        <item name="colorSecondaryVariant">@color/zinc_400</item>
        <item name="colorOnSecondary">@color/zinc_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/lavender_400</item>
        <item name="colorError">@color/red_400</item>
        <item name="colorSurface">@color/zinc_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?attr/colorPrimary</item>
    </style>

    <!-- NoActionBar -->
    <style name="Theme.SunSavvy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppDrawer -->
    <style name="AppDrawer.Style" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:labelTextSize">@dimen/text_md</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/space_md</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <!-- CardView -->
    <style name="Card.Primary" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_squircle_md</item>
        <item name="cardElevation">@dimen/elevation_lg</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>